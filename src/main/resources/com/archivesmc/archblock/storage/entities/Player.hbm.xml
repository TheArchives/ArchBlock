<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.archivesmc.archblock.storage.entities">
    <class name="Player" table="PLAYER">
        <id name="username" column="username" />

        <property name="uuid" column="uuid" unique="true" />
        <property type="org.jadira.usertype.dateandtime.joda.PersistentDateTime" name="lastOnline"
                  column="last_online" unique="false" not-null="true" />
    </class>
</hibernate-mapping>
